{% extends 'BikeDashboardBundle::layout.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        编辑单车
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> 首页</li>
        <li>单车管理</li>
        <li><a href="{{ path('bike') }}">单车</a></li>
        <li class="active">编辑</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">单车信息</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <form role="form" id="edit-bike-form">
                  <div class="row">
                      <div class="col-md-6 col-sm-12 col-xs-12">
                      <div class="box-body">
                        <div class="callout callout-danger" style="display:none">
                          <h4>编辑失败</h4>
                          <p></p>
                        </div>
                        <div class="form-group">
                          <label for="region">经纬度</label><br/>
                          <input type="text" class="" id="lng" name="lng" placeholder="经度" value="{{ bike.getLng() }}" required="required">-
                          <input type="text" class="" id="lat" name="lat" placeholder="纬度" value="{{ bike.getLat() }}" required="required">
                        </div>
                        <div class="form-group">
                          <label for="repwd">车主</label><br/>
                          <select name="user_id" class="select">
                            <option value="">请选择</option>
{% for key,v in userlist %}
                            <option value="{{ v.getId() }}" {% if key == bike.getUser_id() %}selected="selected"{% endif %}>{{v.getName()}}</option>
{% endfor %}
                          </select>
                        </div>
                      </div>
                      <!-- /.box-body -->
                  </div>
              </div>

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">保存</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
{% endblock %}

{% block footer_js %}
{{ parent() }}
<script>
$(function(){
    var $form = $('#edit-bike-form');
    $form.submit(function(){
        var url = '{{ path('bike_edit',{id: bike.getId()}) }}';
        var data = $form.serializeArray();

        $form.find('button[type="submit"]').prop('disabled', true);
        $.post(url, data, function(result){
            if (result.errno == 0) {
                window.location.href = '{{ path('bike') }}';
            } else {
                $form.find('.callout-danger').show().find('p').html(result.errmsg);
            }
            $form.find('button[type="submit"]').prop('disabled', false);
        });
        return false;
    });
});
</script>
{% endblock %}
