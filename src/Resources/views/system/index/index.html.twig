{% extends 'BikeDashboardBundle::layout.html.twig' %}

{% block content %}
    <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        管理员
        <small> admin</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">系统设置</li>
        <li >管理员</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="nav-tabs-custom">
                <!-- tab 标签 -->
                <ul class="nav nav-tabs">
                    <li class="active"><a href="javascript:;" data-toggle="tab">管理员列表</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="bicycle">
                        <form class="search_form" id="search_form" action="#" method="get">
                            <!-- 搜索 -->
                            <div class="dataTables_length fa-border" style="margin: 10px 0; padding: 10px">
                                <input type="text" name="admin_name" value="" class="input-sm" style="border: 1px solid #a9a9a9;" placeholder="用户名称">
                                <select name="role_id" class="input-sm">
                                    <option value="">角色</option>
                                    <option value="1">管理员</option>
                                    <option value="2">运维组</option>
                                    <option value="3">测试组</option>
                                </select>
                                <select name="state" class="input-sm">
                                    <option value="">状态</option>
                                    <option value="0">禁用</option>
                                    <option value="1">启用</option>
                                </select>
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;搜索</button>
                                </div>
                            </div>
                        </form>
                        <!-- 新增 -->
                        <div class="form-group">
                            <a href="{{ path('admin_new') }}" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        
                        </div>
                        <form id="table_form" class="table_form" method="post">
                            <table class="table table-bordered table-hover dataTable" role="grid">
                                <thead>
                                <tr>
                                    <th>用户名称</th>
                                    <th>角色</th>
                                    <th>最后登录时间</th>
                                    <th>状态</th>
                                    <th style="min-width:130px;">操作</th>
                                </tr>
                                </thead>
                                <tbody>
{% for v in list.admin %}
                                <tr>
                                    <!--<td><input type="checkbox" name="selected[]" value="1"></td>-->
                                    <td>{{ v.getUsername() }}</td>
                                    <td>{{ v.getName() }}</td>
                                    <td>{{ v.getCreate_time|date('Y-m-d H:i:s') }}</td>
                                    <td>启用</td>
                                    <td>
                                        <div class="btn-group">
                                            <button data-url="{{ path('admin_edit',{id:v.getId()}) }}" type="button" class="btn btn-info link"><i class="fa fa-fw fa-pencil"></i>编辑</button>
                                            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="{{ path('admin_del',{id:v.getId()}) }}">删除</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
{% endfor %}
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                    {% import 'BikeDashboardBundle::paginator.macro.twig' as paginator %}
                    {{ paginator.paginate(page, totalPage, 5, 'system_admin', app.request.query.all(), ['pull-right']) }}
                    </div>
                </div>
            </div>
        </div>
    </div>     
</section>
    <!-- /.content -->
{% endblock %}

{% block footer_js %}
{{ parent() }}
<script type="text/javascript">
    $('.date-range').daterangepicker({
        locale:{
            format: 'YYYY-MM-DD',
            isAutoVal:false,
        }
    });

    $("#filter_type").change(function() {
        $("#filter_text").attr("name", $(this).val());
    });
</script>
{% endblock %}